
pipeline {
    agent any
    stages {
        stage('Set up tools and environment') {
            
            steps {
                sh "java -version"
                sh "docker build -t devopsgurus:v1X -f ./Docker/DockerFileX ."
            }
        }
        stage('Run the build') {
            agent {
                docker { image 'devopsgurus:v1X' }
            }
            steps {
                 sh "java -version"
            
                 sh "gradle build --debug"
            }
        }
    }
}

